<Window x:Class="Диплом_Альбион.Work_Director_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Диплом_Альбион"
        mc:Ignorable="d"
        Title="Система Альбион" Height="490" MinHeight="490" Width="800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" MaxHeight="40"/>
            <RowDefinition Height="202*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Content="Frame" NavigationUIVisibility="Hidden" Margin="0,31,0,0" Grid.RowSpan="2"/>
        <Grid Name="Hot_Button">
            <Button x:Name="Button_Users" Content="Пользователи" HorizontalAlignment="Left" Margin="10,0,0,0"
                    VerticalAlignment="Center" Click="Button_Users_Click"/>
            <Button x:Name="Button_Stats" Content="Статистика" HorizontalAlignment="Left" Margin="102,0,0,0"
                    VerticalAlignment="Center" Click="Button_Stats_Click"/>
            <Button x:Name="Button_Orders_Designs" Content="Заказы дизайнов" HorizontalAlignment="Left" Margin="179,0,0,0"
                    VerticalAlignment="Center" Click="Button_Orders_Designs_Click"/>
            <Button x:Name="Button_To_Between" Content="Выход" HorizontalAlignment="Left" Margin="287,0,0,0"
                    VerticalAlignment="Center" Click="Button_To_Between_Click"/>
        </Grid>
    </Grid>
</Window>
