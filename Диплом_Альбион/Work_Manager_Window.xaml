<Window x:Class="Диплом_Альбион.Work_Manager_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Диплом_Альбион"
        mc:Ignorable="d"
        Title="Система Альбион" Height="450" MinHeight="450" Width="800" MinWidth="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" MaxHeight="40"/>
            <RowDefinition Height="202*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Content="Frame" NavigationUIVisibility="Hidden"
               Margin="0,31,0,0" Grid.RowSpan="2"/>
        <Grid Name="Hot_Button" Loaded="Hot_Button_Loaded">
            <Button x:Name="Button_Products" Content="Товары" HorizontalAlignment="Left" Margin="10,0,0,0"
                    VerticalAlignment="Center" Click="Button_Products_Click"/>
            <Button x:Name="Button_Orders" Content="Заказы" HorizontalAlignment="Left" Margin="66,0,0,0"
                    VerticalAlignment="Center" Click="Button_Orders_Click"/>
            <Button x:Name="Button_Customers" Content="Клиенты" HorizontalAlignment="Left" Margin="118,0,0,0"
                    VerticalAlignment="Center" Click="Button_Customers_Click"/>
            <Button x:Name="Button_To_Between" Content="Выход" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Click="Button_To_Between_Click" Margin="174,0,0,0"/>
        </Grid>
    </Grid>
</Window>
