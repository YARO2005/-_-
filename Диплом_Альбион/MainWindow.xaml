<Window x:Class="Диплом_Альбион.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Диплом_Альбион"
        mc:Ignorable="d"
        Title="Система Альбион" Height="450" Width="800" Loaded="Window_Loaded">
    <Viewbox MinHeight="450" MinWidth="800">
        <Grid Height="450" Width="800" >
            <TextBox x:Name="TB_Логин" HorizontalAlignment="Center" 
                     Margin="0,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" 
                     Height="19" TextChanged="TB_Логин_TextChanged">
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="261,126,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="257,190,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
            <PasswordBox x:Name="PB_Пароль" HorizontalAlignment="Center" Margin="0,190,0,0"
                         VerticalAlignment="Top" Width="196" PasswordChanged="PB_Пароль_PasswordChanged">
            </PasswordBox>
            <Button x:Name="Button_Log" Content="Войти" HorizontalAlignment="Center" Margin="0,255,0,0"
                    VerticalAlignment="Top" Width="196" Click="Button_Log_Click"/>
            <TextBlock x:Name="mark_логин" Text="&lt;" Background="White" Foreground="Gray" TextAlignment="Center"
                       FontWeight="Bold" FontSize="16" Margin="498,122,280,306" Width="22" Height="22"/>
            <TextBlock x:Name="mark_пароль" Text="&lt;" Background="White" Foreground="Gray" TextAlignment="Center"
                       FontWeight="Bold" FontSize="16" Margin="498,187,280,241" Width="22" Height="22"/>
            <TextBlock Name="Tip_Логин" HorizontalAlignment="Left" Margin="302,149,0,0" TextWrapping="Wrap" 
                       Text="Введите логин" VerticalAlignment="Top" Width="382" Height="37"/>
            <TextBlock x:Name="Tip_Пароль" HorizontalAlignment="Left" Margin="302,214,0,0" TextWrapping="Wrap" 
                       Text="Введите пароль" VerticalAlignment="Top" Width="382" Height="37"/>

        </Grid>
    </Viewbox>
</Window>
