<Window x:Class="Диплом_Альбион.Директор.Search_Users_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Диплом_Альбион.Менеджер"
        mc:Ignorable="d"
        Title="Поиск пользователя" Height="180" Width="300"
        ResizeMode="NoResize">

    <Grid>
        <Label Content="Поиск" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_number" HorizontalAlignment="Left" Margin="128,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Роль:" HorizontalAlignment="Left" Margin="87,37,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Номер телефона:" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Center" Height="27"/>
        <CheckBox x:Name="CheckBox_role" Content="" HorizontalAlignment="Left" Margin="253,43,0,0" VerticalAlignment="Top" IsChecked="False"/>
        <CheckBox x:Name="CheckBox_number" Content="" HorizontalAlignment="Left" Margin="253,67,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button_Search" Content="Найти" HorizontalAlignment="Left" Margin="128,118,0,0" VerticalAlignment="Top" Width="120" Click="Button_Search_Click"/>
        <ComboBox x:Name="CB_role" HorizontalAlignment="Left" Margin="128,40,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_sname" HorizontalAlignment="Left" Margin="128,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="64,88,0,0" VerticalAlignment="Top" Height="27"/>
        <CheckBox x:Name="CheckBox_sname" Content="" HorizontalAlignment="Left" Margin="253,94,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
