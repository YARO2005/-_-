<Window x:Class="Диплом_Альбион.Менеджер.Search_Products_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Диплом_Альбион.Менеджер"
        mc:Ignorable="d"
        Title="Search_Products_Window" Height="180" Width="300"
        ResizeMode="NoResize">

    <Grid>
        <Label Content="Поиск" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_name" HorizontalAlignment="Left" Margin="128,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_manufacturer" HorizontalAlignment="Left" Margin="128,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название:" HorizontalAlignment="Left" Margin="60,46,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Производитель:" HorizontalAlignment="Left" Margin="27,70,0,0" VerticalAlignment="Top" Height="27"/>
        <CheckBox x:Name="CheckBox_name" Content="" HorizontalAlignment="Left" Margin="253,52,0,0" VerticalAlignment="Top" IsChecked="False"/>
        <CheckBox x:Name="CheckBox_manufacturer" Content="" HorizontalAlignment="Left" Margin="253,77,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button_Search" Content="Найти" HorizontalAlignment="Left" Margin="128,99,0,0" VerticalAlignment="Top" Width="120" Click="Button_Search_Click"/>

    </Grid>
</Window>
